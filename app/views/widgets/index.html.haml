%h1 Listing widgets

%table
  %tr
    %th Name
    %th Description
    %th Price
    %th Currency
    %th Inventory
    %th
    %th
    %th

  - @widgets.each do |widget|
    %tr
      %td= widget.name
      %td= widget.description
      %td= widget.price
      %td= widget.currency
      %td= widget.inventory
      %td= link_to 'Show', widget
      %td= link_to 'Edit', edit_widget_path(widget)
      %td= link_to 'Destroy', widget, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Widget', new_widget_path
