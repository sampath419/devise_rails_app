= form_for @widget do |f|
  -if @widget.errors.any?
    #error_explanation
      %h2= "#{pluralize(@widget.errors.count, "error")} prohibited this widget from being saved:"
      %ul
        - @widget.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :currency
    = f.text_field :currency
  .field
    = f.label :inventory
    = f.number_field :inventory
  .actions
    = f.submit 'Save'
